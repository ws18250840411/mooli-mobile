{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "mooli-mobile": ["components/index.tsx"],
      "mooli-mobile/dist/esm/*": ["components/*"]
    },
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["classnames", "react", "react-dom", "node"]
  },
  "include": ["components", "typings"],
  "exclude": ["node_modules", "esm", "lib", "dist", "site", "**/__tests__/**", "tests"],
  "compileOnSave": false,
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
